{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data": { "url": "https://raw.githubusercontent.com/zyon0007/Billionaires/main/data/faceted_donut_chart.csv"},
    "transform": [
      {"calculate": "datum.Gender == 'Female' ? 'Female' : 'Male'", "as": "Gender"}
    ],
    "spacing": 0,
    "hconcat": [
        {
          "width": 100,
          "height": 200,
          "view": {"stroke": null},
          "mark": {
            "type": "text",
            "align": "center"
          },
          "encoding": {
            "text": {"value": " "}
          }
        },
        {
          "width": 200,
          "height": 200,
          "transform": [{
              "filter": {"field": "Gender", "equal": "Female"}
          }],
          "title": "Female",
          "layer":[{
              "mark": {"type": "arc", "innerRadius": 60, "stroke": "#fff"},
              "encoding": {
                  "theta": {"field": "Count", "type": "quantitative", "stack": true},
                  "color": {"field": "Self_Made", 
                            "type": "nominal",
                            "scale": {"range": ["#C41E3A", "#0047AB"]},
                            "legend":{"orient": "bottom","title":"Self Made"}
                          },
                  "tooltip": [
                      {
                      "field": "Gender", 
                      "type": "nominal", 
                      "title": "Gender"
                    },
                    {
                      "field": "Self_Made", 
                      "type": "nominal", 
                      "title": "Self Made"
                    },
                    {
                      "field": "Count",
                      "type": "quantitative",
                      "title": "Self Made Count"
                    }
                  ]
              }
            },
            {
              "mark": {"type": "text", "radius": 0},
              "encoding": {
                "text": {"value": "Total Female: 10"},
                "color": {"value": "#d6949e"}
              }
            }, 
            {
              "mark": {"type": "text", "radiusOffset": 125},
              "encoding": {
                "text": {"field": "Percentage", "type": "nominal"},
                "theta": {"field": "Count", "type": "quantitative", "stack": true},
                "radius": {"field": "Count", "scale": {"type": "sqrt"}},
                "color": {"field": "Self_Made", "type": "nominal", "legend": null}
              }
            }
          ]
        }, 
        {
          "width": 200,
          "height": 200,
          "view": {"stroke": null},
          "mark": {
            "type": "text",
            "align": "center"
          },
          "encoding": {
            "text": {"value": " "}
          }
        }
        , 
        {
            "width": 200,
            "height": 200,
            "transform": [{
                "filter": {"field": "Gender", "equal": "Male"}
            }],
            "title": "Male",
            "layer":[{
                "mark": {"type": "arc", "innerRadius": 60, "stroke": "#fff"},
                "encoding": {
                    "theta": {"field": "Count", "type": "quantitative", "stack": true},
                    "color": {"field": "Self_Made", 
                              "type": "nominal",
                              "scale": {"range": ["#C41E3A", "#0047AB"]}
                            },
                    "tooltip": [
                        {
                        "field": "Gender", 
                        "type": "nominal", 
                        "title": "Gender"
                      },
                      {
                        "field": "Self_Made", 
                        "type": "nominal", 
                        "title": "Self Made"
                      },
                      {
                        "field": "Count",
                        "type": "quantitative",
                        "title": "Self Made Count"
                      }
                    ]
                }
              },
              {
                "mark": {"type": "text", "radius": 0},
                "encoding": {
                  "text": {"value": "Total Male: 90"},
                  "color": {"value": "#74b1cf"}
                }
              }, 
              {
                "mark": {"type": "text", "radiusOffset": 115},
                "encoding": {
                  "text": {"field": "Percentage", "type": "nominal"},
                  "theta": {"field": "Count", "type": "quantitative", "stack": true},
                  "radius": {"field": "Count", "scale": {"type": "sqrt"}},
                  "color": {"field": "Self_Made", "type": "nominal", "legend": null}
                }
              }
            ]
        }
    ],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false},
      "style": {
        "guide-title": {
        "font": "Source Sans Pro, sans-serif",
        "fontSize":15
        },
        "text": {
        "font": "Source Sans Pro, sans-serif",
        "fontWeight": "normal",
        "fontSize":15
        }
    }
    }
  }
  