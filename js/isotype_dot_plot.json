{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",    
    "background":null,
    "width": 750,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/zyon0007/Billionaires/main/data/isotype_dot_plot.csv"
    },
    "layer":[{
    "transform": [
        {
            "calculate": "{'Male': 'üßç', 'Female': 'üßç‚Äç‚ôÄÔ∏è'}[datum.human]",
            "as": "icon"
        },
        {"window": [{"op": "rank", "as": "rank"}], "groupby": ["human"]}
    ],
    "mark": {"type": "text", "baseline": "middle"},
    "encoding": {
        "x": {"field": "rank", "type": "ordinal", "axis": null},
        "y": {"field": "human", "type": "nominal", "sort": null, "title": "Gender"},
        "text": {"field": "icon", "type": "nominal"},
        "size": {"value": 80},
        "tooltip": [
            {
            "field": "human", 
            "type": "nominal", 
            "title": "Gender"
          }
        ]
    }
    },
    {
      "transform": [
        {
          "calculate": "'1 icon = 10 billionaires'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":280,
        "dy":120
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"#FF6863"},
        "size": {
          "value": 15
        }
      }
    }
    ],
    "config": {"view": {"stroke": ""},
                "style": {
                    "guide-title": {
                    "font": "Source Sans Pro, sans-serif",
                    "fontSize":15
                    },
                    "text": {
                    "font": "Source Sans Pro, sans-serif",
                    "fontWeight": "normal",
                    "fontSize":15
                    }
                }
            }
  }