{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Gender Among Top 100 Billionaires in USA",
    "config": {"view": {"stroke": ""}},
    "width": 800,
    "height": 200,
    "data": {
      "url": "https://raw.githubusercontent.com/zyon0007/Billionaires/main/data/isotype_dot_plot.csv"
    },
    "transform": [
        {
            "calculate": "{'male': 'üßç', 'female': 'üßç‚Äç‚ôÄÔ∏è'}[datum.human]",
            "as": "icon"
        },
        {"window": [{"op": "rank", "as": "rank"}], "groupby": ["gender", "human"]}
    ],
    "mark": {"type": "text", "baseline": "middle"},
    "encoding": {
        "x": {"field": "rank", "type": "ordinal", "axis": null},
        "y": {"field": "human", "type": "nominal", "axis": null, "sort": null},
        "row": {"field": "gender", "header": {"title": ""}},
        "text": {"field": "icon", "type": "nominal"},
        "size": {"value": 50}
    }
  }
