{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/zyon0007/Billionaires/main/data/horizontal_stack_bar_chart.csv"
    },
    "hconcat": [
      {
        "vconcat": [
          {
            "height": 350,
            "width": 800,
            "mark": "bar",
            "params": [
              {
                "name": "region",
                "select": {
                  "type": "point",
                  "fields": [
                    "Regional indicator"
                  ]
                },
                "bind": "legend"
              }
            ],
            "transform": [
              {
                "filter": {
                  "param": "time_brush"
                }
              }
            ],
            "encoding": {
              "x": {
                "field": "Regional indicator",
                "type": "nominal",
                "axis": null
              },
              "y": {
                "aggregate": "average",
                "field": "Life Ladder",
                "type": "quantitative",
                "title": "Average Happiness score"
              },
              "color": {
                "field": "Regional indicator",
                "title":"",
                "legend": {
                  "columnPadding":40,
                  "titlePadding":10,
                  "title": "Filter the charts by clicking on a region",
                  "orient": "top",
                  "titleFontSize":20,
                  "titleFont":"Source Sans Pro,sans-serif",
                  "titleLimit":500
                }
              },
              "tooltip": [
                {
                  "field": "Regional indicator",
                  "title": "Region"
                },
                {
                  "aggregate": "mean",
                  "field": "Life Ladder",
                  "title": "Average Happiness score",
                  "format": ".2f"
                }
              ],
              "opacity": {
                "condition": {
                  "param": "region",
                  "value": 1
                },
                "value": 0.4
              }
            }
          },
          {
            "height": 300,
            "width": 800,
            "mark": "line",
            "transform": [
              {
                "filter": "datum['Regional indicator'] != 'NA'"
              },
              {
                "filter": "datum.year > 2005"
              }
            ],
            "params": [
              {
                "name": "time_brush",
                "select": {
                  "type": "interval",
                  "encodings": [
                    "x"
                  ]
                }
              }
            ],
            "encoding": {
              "x": {
                "field": "year",
                "type": "nominal",
                "title":"Year"
              },
              "y": {
                "aggregate": "mean",
                "field": "Life Ladder",
                "title": "Happiness score"
              },
              "color": {
                "field": "Regional indicator"
              },
              "tooltip": [
                {
                  "field": "year",
                  "title": "Year"
                },
                {
                  "field": "Regional indicator",
                  "title": "Region"
                },
                {
                  "aggregate": "mean",
                  "field": "Life Ladder",
                  "title": "Happiness score",
                  "format": ".2f"
                }
              ],
              "opacity": {
                "condition": {
                  "param": "region",
                  "value": 1
                },
                "value": 0.2
              }
            }
          }
        ]
      },
      {
        "width": 400,
        "height": 685,
        "title": "Top 20 happiest countries",
        "transform": [
          {
            "filter": {
              "param": "time_brush"
            }
          },
          {
            "filter": "datum['Regional indicator'] != 'NA'"
          },
          {
            "filter": "datum.year > 2005"
          },
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "Life Ladder",
                "as": "AverageScore"
              }
            ],
            "groupby": [
              "Country",
              "Regional indicator"
            ]
          },
          {
            "window": [
              {
                "op": "rank",
                "as": "rank"
              }
            ],
            "sort": [
              {
                "field": "AverageScore",
                "order": "descending"
              }
            ]
          },
          {
            "filter": "datum.rank <= 20"
          }
        ],
        "encoding": {
          "y": {
            "title": null,
            "field": "Country",
            "type": "nominal",
            "sort": {
              "field": "AverageScore",
              "op": "mean",
              "order": "descending"
            }
          },
          "x": {
            "field": "AverageScore",
            "type": "quantitative",
            "title": "Average Happiness score"
          },
          "tooltip": [
            {
              "field": "Country",
              "type": "nominal"
            },
            {
              "field": "AverageScore",
              "type": "quantitative",
              "format": ".2f",
              "title": "Average Happiness score"
            }
          ]
        },
        "layer": [
          {
            "mark": "bar",
            "encoding": {
              "color": {
                "field": "Regional indicator"
                          },
              "opacity": {
                "condition": {
                  "param": "region",
                  "value": 1
                },
                "value": 0.4
              }
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "right",
              "xOffset": -6
            },
            "encoding": {
              "y": {
                "field": "Country",
                "type": "nominal",
                "axis": null,
                "sort": {
                  "field": "AverageScore",
                  "op": "mean",
                  "order": "descending"
                }
              },
              "x": {
                "field": "AverageScore",
                "type": "quantitative",
                "title": "Average Happiness score"
              },
              "opacity": {
                "condition": {
                  "param": "region",
                  "value": 1
                },
                "value": 0.4
              },
              "text": {
                "field": "Country"
              }
            }
          }
        ]
      }
    ],
    "config": {
      "axis": {
        "labelFont": "Source Sans Pro, sans-serif",
        "labelAngle": 0,
        "labelColor": "black",
        "titleColor": "black",
        "gridColor": "lighter",
        "labelFontSize": 14,
        "labelLimit": 500
      },
      "padding": {
        "left": 5,
        "top": 5,
        "right": 5,
        "bottom": 5
      },
      "style": {
        "guide-title": {
          "font": "Source Sans Pro, sans-serif",
          "limit": 400,
          "fontSize": 15
        },
        "text": {
          "font": "Source Sans Pro, sans-serif",
          "fontWeight": "normal",
          "size": 14
        }
      },
      "legend": {
        "columns": 5,
        "labelLimit": 300,
        "labelFontSize": 16,
        "labelFont": "Source Sans Pro, sans-serif",
        "labelPadding": 4,
        "rowPadding": 6
      }
    }
  }