{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data": { "url": "https://raw.githubusercontent.com/zyon0007/Billionaires/main/data/diverging_stacked_bar_chart.csv"},
    "transform": [
      {"calculate": "datum.Gender == 'Female' ? 'Female' : 'Male'", "as": "Gender"}
    ],
    "spacing": 0,
    "hconcat": [
            {
            "width": 250,
            "height": 400,
        "transform": [{
            "filter": {"field": "Gender", "equal": "Female"}
        }],
        "title": "Female",
        "layer": [
        {"mark": "bar",
            "encoding": {
                "y": {
                "field": "Age Group", "axis": null, "sort": "descending"
                },
                "x": {
                "aggregate": "sum", "field": "Count",
                "title": "Age Group Count",
                "axis": {"format": "s"},
                "sort": "descending","scale": {"domain": [0, 70]}
                },
                "color": {
                "field": "Gender",
                "scale": {"range": ["#FAAFBA", "#89CFF0"]},
                "legend": null
                },
                "tooltip": [
                  {
                      "field": "Gender", 
                      "type": "nominal", 
                      "title": "Gender"
                  },
                  {
                    "field": "Age Group", 
                    "type": "nominal", 
                    "title": "Age Group"
                  },
                  {
                    "field": "Count",
                    "type": "quantitative",
                    "title": "Age Group Count"
                  }
                  ]
            }
        },{
            "mark": {
              "type": "text",
              "baseline": "top",
              "dx": 100,
              "dy": -5
            },
            "encoding": {
              "color": {
                "value": "#FAAFBA"
              },
              "text": {"value": "4"},
              "size": {
                "value": 15
              }
            }
          }
    
    ]

        }, 

    {
      "width": 150,
      "height": 400,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },
      "encoding": {
        "y": {"field": "Age Group", "type": "ordinal", "axis": null, "sort": "descending"},
        "text": {"field": "Age Group", "type": "ordinal"}
        
      }
    }, 
    
    {
        "width": 250,
        "height": 400,
      "transform": [{
        "filter": {"field": "Gender", "equal": "Male"}
      }],
      "title": "Male",
        "layer": [
        {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Age Group", "title": null,
          "axis": null, "sort": "descending"
        },
        "x": {
          "aggregate": "sum", "field": "Count",
          "title": "Age Group Count",
          "axis": {"format": "s"}
        },
        "color": {
          "field": "Gender",
          "legend": null
        },
        "tooltip": [
          {
              "field": "Gender", 
              "type": "nominal", 
              "title": "Gender"
          },
          {
            "field": "Age Group", 
            "type": "nominal", 
            "title": "Age Group"
          },
          {
            "field": "Count",
            "type": "quantitative",
            "title": "Age Group Count"
          }
          ]
      }}
        ,
        {"transform": [
        {
          "calculate": "'Majority of the billionaires'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":20,
        "dy":-100
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"#FF6863"},
        "size": {
          "value": 15
        }
      }
    },
    {
      "transform": [
        {
          "calculate": "'is male with old age'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":20,
        "dy":-80
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"#FF6863"},
        "size": {
          "value": 15
        }
      }
    },
    {
        "mark": {
          "type": "text",
          "baseline": "top",
          "dx": 130,
          "dy": -5
        },
        "encoding": {
          "color": {
            "value": "#74b1cf"
          },
          "text": {"value": "66"},
          "size": {
            "value": 15
          }
        }
      }
    
    ]}],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false},
      "style": {
        "guide-title": {
        "font": "Source Sans Pro, sans-serif",
        "fontSize":15
        },
        "text": {
        "font": "Source Sans Pro, sans-serif",
        "fontWeight": "normal",
        "fontSize":15
        }
    }
    }
  }
  