{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Billionaires' Ranking",
    "width": 800,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/zyon0007/Billionaires/main/data/bar_interactive.csv"
    },
    "transform": [
      {"calculate": "toNumber(datum.Worth_per_billion)", "as": "Net Worth"},
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Net Worth", "order": "descending"}]
      },
      {"filter": "datum.rank <= top_n_rank"}
    ],
    "params": [
      {
        "name": "top_n_rank", "value": 10,
        "bind": {
          "input": "range", "min": 1, "max": 100, "step": 1,
          "name": "Rank: "
        }
      }
    ],
    "layer": [
      {
        "params": [{"name": "brush", "select": {"type": "interval", "encodings": ["y"]}}],
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "Net Worth",
            "type": "quantitative",
            "title": "Net Worth per Billion",
            "aggregate": "mean"
            
          },
          "y": {
            "field": "Names",
            "title": "Names",
            "type": "nominal",
            "axis": null,
            "sort": {
              "field": "Net Worth",
              "op": "average",
              "order": "descending"
            }
          },
          "color": {
            "field": "Net Worth",
            "scale": {
                "type": "threshold",
                "domain": [50, 100, 150, 200],
                "range": [
                    "#DBCBC8",
                    "#A3E4D7",
                    "#7FB3D5",
                    "#C39BD3",
                    "#F9E79F"    
                ]
            },
            "legend": null
          },
          "opacity": {"condition": {"param": "brush", "value": 1}, "value": 0.5},
          "tooltip": [
            {"field": "Names", "type": "nominal", "title": "Names"},
            {
              "field": "Net Worth",
              "type": "quantitative",
              "title": "Net Worth"
            }
          ]
        }
      },
      {
        "transform": [{"filter": {"param": "brush"}}],
        "mark": "rule",
        "encoding": {
          "x": {
            "aggregate": "mean",
            "field": "Net Worth",
            "type": "quantitative"
          },
          "color": {"value": "firebrick"},
          "size": {"value": 2}
        }
      },
      {
        "transform": [
          {"filter": {"param": "brush"}},
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "Net Worth",
                "as": "mean_worth"
              }
            ],
            "groupby": ["brush"]
          },
          {"calculate": "'# The filtered billionaires have an average of '", "as": "text_annotation"}
        ],
        "mark": {"type": "text", "align": "center", "dx": 0, "dy": 300},
        "encoding": {"text": {"field": "text_annotation"}, "color": {"value": "black"}}
      },
      {
        "transform": [
          {"filter": {"param": "brush"}},
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "Net Worth",
                "as": "mean_worth"
              }
            ],
            "groupby": ["brush"]
          },
          {"calculate": "round(datum['mean_worth']) + ' net worth per billion.'", "as": "text_annotation"}
        ],
        "mark": {"type": "text", "align": "center", "dx": 0, "dy": 315},
        "encoding": {"text": {"field": "text_annotation"}, "color": {"value": "#FF6863"}}
      }, 
      {
        "mark": {"type": "text", "align": "left", "x": 5,
        "fontWeight":"bold"},
        "encoding": {
          "y": {
            "field": "Names",
            "title": "Names",
            "type": "nominal",
            "axis": null,
            "sort": {
              "field": "Net Worth",
              "op": "average",
              "order": "descending"
            }
          },
          "text": {"field": "Names"},
          "color": {"value": "black"}
        }
      }
    ],
    "config": {
      
    }
  }